"use server";

import { auth } from "@/lib/auth";

export interface GenericResponse {
	success: boolean;
	message: string;
}

export const signInUser = async (email: string, password: string) => {
	try {
		await auth.api.signInEmail({
			body: {
				email,
				password,
			},
			asResponse: true,
		});

		return { success: true, message: "Signed in success." } as GenericResponse;
	} catch (error) {
		console.error(error);
	}
};
